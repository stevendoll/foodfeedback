<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Daily Food Log <small>Sort, search</small></h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#">Config option 1</a>
                        </li>
                        <li><a href="#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <% @days.each do |day| %>
                <h2><%= Time.at(day.first["date_int"].to_f*86400).strftime("Diet record: %m/%d/%Y") %></h2>
                <table class="table table-striped table-bordered table-hover dataTables-example" >
                    <thead>
                        <tr>
                            <th>Meal</th>
                            <th>Description</th>
                            <th>Calcium</th>
                            <th>Calories</th>
                            <th>Carbohydrate</th>
                            <th>Cholesterol</th>
                            <th>Fat</th>
                            <th>Fiber</th>
                            <th>Iron</th>
                            <th>Protein</th>
                            <th>Saturated fat</th>
                            <th>Sodium</th>
                            <th>Sugar</th>
                            <th>Trans fat</th>
                            <th>Vitamin A</th>
                            <th>Vitamin C</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% day.each do |f| %>
                        <tr class="gradeX">
                            <td><%= f["meal"] %></td>
                            <td><%= f["food_entry_description"] %></td>
                            <td><%= f["calcium"] %></td>
                            <td><%= f["calories"] %></td>
                            <td><%= f["carbohydrate"] %></td>
                            <td><%= f["cholesterol"] %></td>
                            <td><%= f["fat"] %></td>
                            <td><%= f["fiber"] %></td>
                            <td><%= f["iron"] %></td>
                            <td><%= f["protein"] %></td>
                            <td><%= f["saturated_fat"] %></td>
                            <td><%= f["sodium"] %></td>
                            <td><%= f["sugar"] %></td>
                            <td><%= f["trans_fat"] %></td>
                            <td><%= f["vitamin_a"] %></td>
                            <td><%= f["vitamin_c"] %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <% end %>

            </div>
        </div>
    </div>
</div>