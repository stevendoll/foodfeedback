
<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<%= f.error_notification %>

<%= f.input :reset_password_token, as: :hidden %>
<%= f.full_error :reset_password_token %>

<div class="form-inputs">
  <%= f.input :password, required: true, autofocus: true, placeholder: 'Email', label: false %>
  <%= f.input :password_confirmation, required: true, placeholder: 'Confirmation', label: false %>
</div>

<div class="form-actions">
  <%= f.submit "Change my password", :class => 'btn btn-primary block full-width m-b' %>
</div>
<% end %>

<%= render "devise/shared/links" %>

