<h3>Confirm invitation</h3>

<%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

  <%= f.input :password, placeholder: 'Password', label: false %>
  <%= f.input :password_confirmation, placeholder: 'Confirmation', label: false %>

  <%= f.input :goal, as: :text, placeholder: 'Personal goal in coming to our practice?', label: false %>

  <%= f.submit t("devise.invitations.edit.submit_button"), :class => 'btn btn-primary block full-width m-b' %>
<% end %>

